{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strict": true,
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  